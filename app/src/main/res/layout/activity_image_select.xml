<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_image_select"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.administrator.penghuidemo.TitteView.TitleWidget
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="请选择相片"
        />

    <ProgressBar
        android:id="@+id/progress_bar_image_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/text_view_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="9999"/>

    <GridView
        android:layout_marginTop="56dp"
        android:id="@+id/grid_view_image_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:stretchMode="columnWidth"
        android:layout_marginBottom="58dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#222"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
<TextView
    android:id="@+id/tv_look"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:textColor="@color/c12white"
    android:layout_centerVertical="true"
    android:text="预览"
    android:layout_marginLeft="24dp"
    />
<android.support.v7.widget.AppCompatButton
    android:id="@+id/acbtn_sure"
    android:layout_width="wrap_content"
    android:layout_height="36dp"
    android:background="@drawable/btn_bulue_normal_selector"
    android:text="确定"
    android:layout_alignParentRight="true"
    android:layout_marginRight="8dp"
    android:textColor="@color/white"
    android:textSize="@dimen/text_size16"
    android:layout_centerVertical="true"
    />
    </RelativeLayout>
</RelativeLayout>